#!/bin/sh
xrandr --addmode HDMI-1 1920x1080 
# xrandr --output HDMI-1 --mode 1920x1080 --output eDP-1 --mode 1920x1080 --right-of HDMI-1

#!/bin/sh
result=$(printf "eDP-1 only\nHDMI-1 only\nboth eDP and HDMI" | rofi -dmenu -i)

case "$result" in
  "eDP-1 only")
    mon-edp ;;
  "HDMI-1 only")
    mon-hdmi ;;
  "both eDP and HDMI")
    xrandr --output HDMI-1 --primary --mode 1920x1080 --output eDP-1 --mode 1920x1080 --right-of HDMI-1;;
  *) exit 1 ;;
esac

